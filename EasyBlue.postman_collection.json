{
  "info": {
    "name": "EasyBlue API",
    "description": "Documentação completa da API do sistema EasyBlue",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Unidades",
      "description": "Endpoints relacionados ao gerenciamento de unidades",
      "item": [
        {
          "name": "Listar Unidades",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/unidades?nomeunidade=&pessoa=&status_carrinho=&status_retirada=",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "unidades"],
              "query": [
                {
                  "key": "nomeunidade",
                  "value": "",
                  "description": "Filtrar por nome da unidade"
                },
                {
                  "key": "pessoa",
                  "value": "",
                  "description": "Filtrar por nome da pessoa"
                },
                {
                  "key": "status_carrinho",
                  "value": "",
                  "description": "Filtrar por status do carrinho (Aberto, Pago, Cancelado)"
                },
                {
                  "key": "status_retirada",
                  "value": "",
                  "description": "Filtrar por status de retirada (Aguardando, Separado, Retirado, Cancelado)"
                }
              ]
            },
            "description": "Retorna a lista de unidades com filtros opcionais"
          }
        },
        {
          "name": "Buscar Unidade por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/unidades/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "unidades", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID da unidade"
                }
              ]
            },
            "description": "Retorna os detalhes de uma unidade específica"
          }
        }
      ]
    },
    {
