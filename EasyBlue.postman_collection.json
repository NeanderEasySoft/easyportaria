                }
              ]
            },
            "description": "Retorna todos os carrinhos de uma unidade específica"
          }
        },
        {
          "name": "Criar Carrinho",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/v1/carrinhos",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carrinhos"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id_unidade\": 0,\n  \"data\": \"dd/mm/yyyy hh:nn:ss\",\n  \"total\": 0,\n  \"status\": \"Aberto\",\n  \"status_retirada\": \"Aguardando\",\n  \"itens\": [\n    {\n      \"id_produto\": 0,\n      \"quantidade\": 0\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Cria um novo carrinho de compras"
          }
        },
        {
          "name": "Atualizar Carrinho",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/api/v1/carrinhos/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carrinhos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID do carrinho"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id_unidade\": 0,\n  \"data\": \"dd/mm/yyyy hh:nn:ss\",\n  \"total\": 0,\n  \"status\": \"Aberto\",\n  \"status_retirada\": \"Aguardando\",\n  \"itens\": [\n    {\n      \"id_produto\": 0,\n      \"quantidade\": 0\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Atualiza um carrinho existente"
          }
        },
        {
          "name": "Atualizar Status do Carrinho",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{base_url}}/api/v1/carrinhos/:id/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carrinhos", ":id", "status"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID do carrinho"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Pago\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Atualiza apenas o status do carrinho"
          }
        },
        {
          "name": "Atualizar Status de Retirada",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{base_url}}/api/v1/carrinhos/:id/status-retirada",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carrinhos", ":id", "status-retirada"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID do carrinho"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status_retirada\": \"Separado\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Atualiza apenas o status de retirada do carrinho"
          }
        },
        {
          "name": "Excluir Carrinho",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/carrinhos/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carrinhos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "ID do carrinho"
                }
              ]
            },
            "description": "Remove um carrinho existente"
          }
        }
      ]
    },
